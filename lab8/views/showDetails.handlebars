<article class="show-details">
	<h1>{{name}}</h1>
	<img alt="{{picture}}" src="{{picture}}" class="show-picture" />
	<dl>
		<dt>Language</dt>
		<dd>{{language}}</dd>
		<dt>Genres</dt>
		<dd>
			<ul>
				{{#each genres}}
					<li>{{this}}</li>
				{{/each}}
			</ul>
		</dd>
		<dt>Average Rating</dt>
		<dd>{{rating}}</dd>
		<dt>Network</dt>
		<dd>{{network}}</dd>
		<dt>Summary</dt>
		<dd>
			{{summary}}
		</dd>
	</dl>
</article>